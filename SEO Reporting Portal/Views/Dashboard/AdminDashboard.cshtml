@model SEO_Reporting_Portal.ViewModels.AdminDashboardViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">

    <div class="col-lg-3 col-xs-6">
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>@Model.TotalUsers</h3>
                <p>Users</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a asp-action="Index" asp-controller="Users" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-green">
            <div class="inner">
                <h3>@Model.TotalReports</h3>
                <p>Reports</p>
            </div>
            <div class="icon">
                <i class="fas fa-file"></i>
            </div>
            <a asp-action="Index" asp-controller="Reports" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>@Model.TotalGeneralInquiries</h3>
                <p>General Inquiries</p>
            </div>
            <div class="icon">
                <i class="fas fa-inbox"></i>
            </div>
            <a href="#general-inquiry-container" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-red">
            <div class="inner">
                <h3>@Model.TotalReportComments</h3>
                <p>Report Inquiries</p>
            </div>
            <div class="icon">
                <i class="fas fa-comment-alt"></i>
            </div>
            <a asp-action="Inquiries" asp-controller="Reports" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>



</div>

<div class="row mb-5" id="general-inquiry-container">
    <!-- Users box-->
    <div class="col-md-5 col-12 pr-0">
        <div class="bg-white">
            <div class="bg-gray px-4 py-2 bg-light">
                <p class="h5 mb-0 py-1">General Inquiries</p>
            </div>

            <div class="chat-list-container">
            </div>
        </div>
    </div>
    <!-- Chat Box-->
    <div class="col-md-7 col-12 pl-0">
        <div class="px-4 py-5 chat-message-box bg-white">
            <div class="messages-container">

            </div>
            <div class="message-typing-container">
                <form class="bg-light" method="post">
                    <div class="input-group">
                        <input type="text" id="txt-message" placeholder="Type a message" aria-describedby="button-addon2" class="form-control rounded-0 border-0 py-4 bg-light messg">
                        <div class="input-group-append">
                            <button type="submit" class="send-message-btn btn btn-link"><i class="fa fa-paper-plane"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/adminDashboard.js"></script>
}


